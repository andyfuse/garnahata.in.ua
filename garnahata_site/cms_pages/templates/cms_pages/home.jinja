        {% if hp_news %}
        <div id="topNews">
            <h2 class="blue">Останні новини</h2>
            <div class="topNewsContainer">
                <div class="overImage"><img class="img-responsive" src="{{ hp_news.image.file|thumbnail_url("homepage_news") }}" /></div>
                <div class="overInfo"> <span class="dateInfo">{{ hp_news.date_added|date }}</span>
                    <h3 class="shortTitle"><a href="{{ hp_news.url }}">{{ hp_news.title }}</a></h3>
                    <h4 class="title"><a href="{{ hp_news.url }}">{{ hp_news.lead|richtext }}</a></h4>
                    <div class="newsStats"> <span class="viewsCounter"><!-- <span class="commentsCounter"><i class="fa fa-comment-o"></i> 12 --></span> </div>
                </div>
                <div class="clr"></div>
            </div>
        </div>
        {% endif %}
        <div id="news">
            <div id="newsMassonry" class="massonry">
                <div class="grid-sizer"></div>
                {% for news in latest_news %}
                <div class="item{% if news.important %} important-news{% endif %}">
                    <div class="well">
                        <a href="{{ news.url }}"><img class="img-responsive" src="{{ news.image.file|thumbnail_url("news_thumbnail") }}" alt="" /></a>
                        <h4><a href="{{ news.url }}">{{ news.title }}</a></h4>
                        <div class="newsStats"> <span class="viewsCounter"><span class="commentsCounter"><i class="fa fa-comment-o"></i> 12</span> <span class="timeCounter">{{ news.date_added|date }}</span> </div>
                    </div>
                </div>
                {% endfor %}
            </div>
            <div class="clr h40"></div>
            {# <p class="text-center"><a class="blue rounded text-center moreAjax">Ану покажіть більше новин <i class="fa fa-refresh"></i></a></p> #}
